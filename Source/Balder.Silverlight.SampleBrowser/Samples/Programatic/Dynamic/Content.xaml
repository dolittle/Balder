<UserControl x:Class="Balder.Silverlight.SampleBrowser.Samples.Programatic.Dynamic.Content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Execution="clr-namespace:Balder.Execution;assembly=Balder" xmlns:Lighting="clr-namespace:Balder.Lighting;assembly=Balder" xmlns:View="clr-namespace:Balder.View;assembly=Balder" mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

	<Grid x:Name="LayoutRoot">
		<StackPanel Orientation="Vertical">
			<Execution:Game x:Name="Game" Width="800" Height="480">
				<Execution:Game.Camera>
					<View:Camera Position="0,5,-20"/>
				</Execution:Game.Camera>
				<Lighting:OmniLight/>
			</Execution:Game>
			
			<Button Content="Add Box" Click="Button_Click"/>
		</StackPanel>

	</Grid>
</UserControl>

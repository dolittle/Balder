<UserControl x:Class="Balder.Silverlight.SampleBrowser.Samples.Materials.Editor.MapEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit" mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" VerticalAlignment="Center">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80"/>
			<ColumnDefinition Width="50"/>
			<ColumnDefinition Width="170"/>
		</Grid.ColumnDefinitions>
		
		<TextBlock x:Name="MapNameTextBlock" Text="Name" Grid.Column="0"/>
		<toolkit:NumericUpDown x:Name="OpacityNumericUpDown" Width="50" Minimum="0" Maximum="1" DecimalPlaces="2" Increment=".1" Grid.Column="1"/>
		<ComboBox x:Name="MapItemsComboBox" Width="100" Grid.Column="2"/>
	</Grid>
</UserControl>
